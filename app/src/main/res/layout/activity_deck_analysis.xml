<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.uco.rconyac1.magiccompanion.DeckAnalysisActivity"
    android:background="#000000"
    android:orientation="vertical"

    >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deckTitle"
                android:text="Title"
                android:textColor="#d1a319"
                android:textSize="30dp"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mana Curve"
                android:textColor="#d1a319"
                android:textSize="20dp"
                />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:id="@+id/manaCurveFrame"
                android:background="#535353"
                android:paddingTop="5dp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color Distribution"
                android:textColor="#d1a319"
                android:textSize="20dp"/>
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                android:id="@+id/colorsPieFrame"
                android:background="#535353"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#d1a319"
                android:text="Card Type Distribution"
                android:textSize="20dp"
                />
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                android:id="@+id/typesPieFrame"
                android:background="#535353"
                android:layout_marginBottom="10dp" />



        </LinearLayout>
    </ScrollView>

</LinearLayout>
